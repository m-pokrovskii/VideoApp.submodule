va()
	position: relative;
	top: 50%; 
	transform: translateY(-50%);
		
html {
	font-size: 62.5% !important;
	line-height: 1.8em !important;
	font-family: Arial !important;
	overflow: hidden;
	height: 100%;
	@media (min-height: 560px) and (orientation: portrait){
		font-size: 65% !important;
		line-height: 1.7em !important;
		}
	@media (min-height: 667px) and (orientation: portrait){
		font-size: 80% !important;
		line-height: 1.8em !important;
		}
	@media (min-height: 700px) and (orientation: portrait){
		font-size: 100% !important;
		line-height: 1.8em !important;
		}
	@media (min-height: 750px) and (orientation: portrait){
		font-size: 120% !important;
		line-height: 1.8em !important;
		}
	@media (min-height: 950px) and (orientation: portrait){
		font-size: 140% !important;
		line-height: 1.8em !important;
		}
	@media (min-height: 375px) and (orientation: landscape){
		font-size: 80% !important;
		line-height: 1.8em !important;
		}
	@media (min-height: 414px) and (orientation: landscape){
		font-size: 90% !important;
		}
	@media (min-height: 600px) and (orientation: landscape){
		font-size: 120% !important;
		}
	}
	
._landscape,
._portrait {
	display: none !important;
	}
	

._landscape {
	@media (orientation: landscape) {
		display: block !important;
		}	
	}

._portrait {
	@media (orientation: portrait) {
		display: block !important;
		}	
	}

body {
	font-size: 1em !important;
	padding: 0; margin: 0;
	}

body, .app
	position fixed
	z-index 2147483647
	width 100%; height 100%
	top 0; left 0; right 0; bottom 0;	
	color #000 !important
	overflow: hidden;
		
.app {
	position: relative;
	background: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 40%, rgba(35,31,32,1) 40%, rgba(35,31,32,1) 71%, rgba(86,87,89,1) 100%);
	}

.app * 
	box-sizing border-box
	margin 0
	padding 0

.video-block {
	@media (orientation: landscape) {
		position: relative;
		height: 100%;
		}
	}
	

.video {
	#video-player {
		width: 100%;
		display: block;
		}
	@media (orientation: landscape) {
		va();
		}
	}
	
.small-image {
	text-align: center;
	img {
		width: 40px;
		}
	}
	
.skip-block {
	display: none;
	}
	
.header-block {
	height: 20%;
	@media (orientation: landscape) {
		position: absolute; bottom: 0; left: 25%; width: 45%; z-index: 2;
		height: 12.8%;
		}
	}
	
.video-block {}
	
.content-block {
	height: 15%;
	@media (orientation: landscape) {
		position: absolute; bottom: 0; width: 100%; padding: 0;
		height: 12.8%;
		background: rgba(0,0,0,0.5);
		}
	}

.bottom-block {
	
	}
	
// skip

.skip-block {
	font-size: 0.9em;
	color: #706f6f;
	padding: 5% 1% 0 4%;
	@media (orientation: landscape) {
		color: #FFF;
		va();
		padding: 0;
		font-size: 1em;
		}
	}

	.skip-block__text {
		float: right;
		@media (orientation: landscape) {
			float: none;
			}
		}
		
	.skip-block__link {
		float: left;
		color: #706f6f;
		text-decoration: none;
		@media (orientation: landscape) {
			float: none;
			color: #8d8d8d;
			}
		}
		
	.skip-block__countdown {
		font-size: 1.2em;
		font-weight: bold;
		color: #FFF;
		display: inline-block;
		background: #706f6f;
		width: 1.9em; height: 1.9em;
		text-align: center;
		margin: 0 0.5em;
		vertical-align: middle; line-height: 1.9em;
		-webkit-border-radius: 50%;
		border-radius: 50%;
		@media (orientation: landscape) {
			font-size: 1em;
			background: #FFF;
			color: #000;
			}
		}
	
// content-block
.content-block {
	padding: 3% 4% 0 4%;
	}
	
	.content-block__title {
		float: left;
		width: 50%;
		font-size: 2em;
		font-weight: bold;
		color: #fff;
		@media (orientation: landscape) {
			display: none;
			}
		}
		
	.content-block__rating {
		width: 50%;
		float: right;
		color: #FFF;
		text-align: right;
		@media (orientation: landscape) {
			display: none;
			}
		}
		
		.rating__stars {
			width: 36%;
			display: inline-block;
			img {
				width: 100%;
				}
			@media (orientation: landscape) {
				display: none;
				}
			}
			
		.stars {
			position: relative;
			width: 100%;
			overflow: hidden;
			.stars__hover {
				position: absolute;
				width: 100%;
				top: 0; left: 0;
				overflow: hidden;
				}
			}

		.rating__downloads {
			color: #d1d2d4;
			}
			
// bottom-block
.bottom-block {
	@media (orientation: landscape) {
		position: absolute; bottom: 2%; right: 2%; width: 27%;
		height: 12.8%;
		}
	}

.bottom-block__button {
	text-align: center;
	@media (orientation: landscape) {
		height: 100%;
		}
	}
	
.btn {
	display: inline-block;
	font-size: 1.5em;
	font-weight: bold;
	color: #fff;
	text-decoration: none;
	min-width: 38%;
	padding: 0.6em 0;
	text-align: center;
	border: solid 1px #ea8220;
	box-shadow: 0 3px 5px rgba(0,0,0,0.45);
	background: #282828;
	border-radius: 3px;
	@media (orientation: landscape) {
		width: 100%;
		height: 100%;
		font-size: 1.5em;
		span {
			display: block;
			va();
			}
		}
	}
	
.powered-by {
	position: absolute;
	bottom: 1%; left: 0; right: 0;
	width: 35%;
	margin: 0 auto;
	img {
		display: block;
		max-width: 100%;
		}
	@media (orientation: landscape) {
		width: 11%; left: 2%; bottom: 0; right: auto;
		height: 12.8%;
		a {
			display: block;
			va();
			}
		}
	}
	
#play-video {
	// display: none;
	position: absolute; top: 0; z-index: 100
	}
	
.star {
	color: #fff;
	}
	
#sprite-animation {
	position: relative;
	overflow: hidden;
	margin: 0 auto;
	}
			
	.sprite-animation__placeholder {
		display: block;
		width: 100%;
		}
	
	.sprite-animation__video {
		position: absolute; top: 0;
		width: 100%;
		background: url('../images/sprite/output_1.jpg') repeat-y;
		-webkit-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
		img {
			width: 100%;
			display: block;
			}
		}